@using DecisionDeck.DataAccessObjects
@model GroupDTO

@{
    ViewData["Title"] = "Edit Group";
}

<div class="container">
    <div id="message-container" class="mb-2"></div>
    <div class="row justify-content-center">
        <div class="col-6">
            <h2 class="text-center">Edit Group</h2>
            <div class="row p-1">
                <div class="col-2"></div>
                <div class="col-10">
                    <input type="text" id="groupName" class="form-control" placeholder="Group Name" value="@Model.GroupName"/>
                    <p id="errorGname"></p>
                </div>
            </div>

            <div class="row p-1">
                <div class="col-2"></div>
                <div class="col-10 d-grid gap-2">
                    <input type="button" id="updateGroupBtn" class="btn btn-outline-success" value="Update Group" />
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="module" src="/js/updateGroup.js"></script>
}