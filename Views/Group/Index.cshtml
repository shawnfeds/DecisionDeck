@using DecisionDeck.DataAccessObjects
@model GroupPageDTO;

@{
    ViewData["Title"] = "Groups";
}


<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <h1>Groups</h1>
        <div class="border-top my-3"></div>
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Total Groups</h5>
                        <p class="card-text h1 font-weight-bold">@Model.TotalGroupCount</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-success mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Active Groups</h5>
                        <p class="card-text h1 font-weight-bold">@Model.ActiveGroupCount</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-danger mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Inactive Groups</h5>
                        <p class="card-text h1 font-weight-bold">@Model.InActiveGroupCount</p>
                    </div>
                </div>
            </div>
        </div>
        <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th hidden></th>
                    <th class="text-center">GroupName</th>
                    <th class="text-center">CreatedDate</th>
                    <th class="text-center">Edit</th>
                    <th class="text-center">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var group in Model.Groups)
                {
                    <tr>
                        <td hidden id="groupId">@group.GroupId</td>
                        <td>@group.GroupName</td>
                        <td class="text-center">@group.CreatedDate</td>
                        <td class="text-center"><a class="btn btn-outline-warning" href="/Group/Edit?GroupId=@group.GroupId"><i class="fa-solid fa-pen-to-square"></i></a></td>
                        <td class="text-center"><a class="btn btn-outline-danger deleteGroup" href="#"><i class="fa-solid fa-trash"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts
{
    <script type="module" src="~/js/deleteGroup.js"></script>
    <script src="~/js/pagination.js"></script>
}
