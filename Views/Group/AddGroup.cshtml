
@{
    ViewData["Title"] = "AddGroup";
}

<div class="container">
    <div id="message-container" class="mb-2"></div>
    <div class="row justify-content-center">
        <div class="col-6">
            <h2 class="text-center">Add Group</h2>
            <div class="row p-1">
                <div class="col-2"></div>
                <div class="col-10">
                    <input type="text" id="groupName" class="form-control" placeholder="Group Name" />
                    <p id="errorGname"></p>
                </div>
            </div>
            <div class="row p-1">
                <div class="col-2"></div>
                <div class="col-10 d-grid gap-2">
                    <input type="button" id="addGroupButton" class="btn btn-outline-success" value="Add Group" />
                </div>
            </div>
        </div>
    </div>
</div>
<script type="module" src="~/js/addGroup.js" asp-append-version="true"></script>

