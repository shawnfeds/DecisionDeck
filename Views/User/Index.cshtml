@model IEnumerable<User>;

@{
    ViewData["Title"] = "Modify User";
}

<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <h1>Modify Users</h1>
        <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th hidden></th>
                    <th class="text-center">Username</th>
                    <th class="text-center">FullName</th>
                    <th class="text-center">Role</th>
                    <th class="text-center">Group</th>
                    <th class="text-center">Edit</th>
                    <th class="text-center">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td hidden id="userId">@user.UserId</td>
                        <td class="text-center">@user.Username</td>
                        <td class="text-center">@user.FullName</td>
                        <td class="text-center">@user.Role.RoleName</td>
                        <td class="text-center">@user.Group.GroupName</td>
                        <td class="text-center"><a class="btn btn-outline-warning" href="/User/Edit?UserId=@user.UserId"><i class="fa-solid fa-pen-to-square"></i></a></td>
                        <td class="text-center"><a class="btn btn-outline-danger deleteUser" href="#"><i class="fa-solid fa-trash"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts
{
    <script type="module" src="~/js/deleteUser.js"></script>
    <script src="~/js/pagination.js"></script>
}
