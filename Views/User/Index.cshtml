@using DecisionDeck.DataAccessObjects
@model UserPageDTO;

@{
    ViewData["Title"] = "Modify User";
}

<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <h1>Modify Users</h1>
        <div class="border-top my-3"></div>
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Total Users</h5>
                        <p class="card-text h1 font-weight-bold">@Model.TotalUserCount</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-success mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Active Users</h5>
                        <p class="card-text h1 font-weight-bold">@Model.ActiveUserCount</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-danger mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Inactive Users</h5>
                        <p class="card-text h1 font-weight-bold">@Model.InActiveUserCount</p>
                    </div>
                </div>
            </div>
        </div>
        <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th hidden></th>
                    <th class="text-center">Username</th>
                    <th class="text-center">FullName</th>
                    <th class="text-center">Role</th>
                    <th class="text-center">Group</th>
                    <th class="text-center">Edit</th>
                    <th class="text-center">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td hidden id="userId">@user.UserId</td>
                        <td class="text-center">@user.Username</td>
                        <td class="text-center">@user.FullName</td>
                        <td class="text-center">@user.Role.RoleName</td>
                        <td class="text-center">@user.Group.GroupName</td>
                        <td class="text-center"><a class="btn btn-outline-warning" href="/User/Edit?UserId=@user.UserId"><i class="fa-solid fa-pen-to-square"></i></a></td>
                        <td class="text-center"><a class="btn btn-outline-danger deleteUser" href="#"><i class="fa-solid fa-trash"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts
{
    <script type="module" src="~/js/deleteUser.js"></script>
    <script src="~/js/pagination.js"></script>
}
