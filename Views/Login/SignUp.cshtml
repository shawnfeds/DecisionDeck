@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
    ViewData["Title"] = "SignUp";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <h2 class="text-center">Sign Up</h2>
            <div id="message-container" class="mb-2"></div>
            <div class="row p-1">
                <div class="col-2"></div>
                <div class="col-5">
                    <input type="text" id="firstname" class="form-control" placeholder="First name" />
                    <p id="errorFname"></p>
                </div>
                <div class="col-5">
                    <input type="text" id="lastname" class="form-control" placeholder="Last name" />
                    <p id="errorLname"></p>
                </div>
            </div>
            <div class="row p-1">
                <div class="col-2"></div>
                <div class="col-10">
                    <input type="text" id="username" class="form-control" placeholder="Username" />
                    <p id="errorUname"></p>
                </div>
            </div>
            <div class="row p-1">
                <div class="col-2"></div>
                <div class="col-10">
                    <div class="input-group">
                        <input type="password" class="form-control" id="password" placeholder="Password" required>
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fa-solid fa-eye showPassword" id="togglePassword" style="cursor: pointer;"></i></span>
                        </div>
                    </div>
                    <p id="errorPassword"></p>
                </div>
            </div>
            <div class="row p-1">
                <div class="col-2"></div>
                <div class="col-10 d-grid gap-2">
                    <input type="button" id="signUpButton" class="btn btn-outline-success" value="SignUp" />
                </div>
            </div>
            <div class="row p-1">
                <div class="col-2"></div>
                <div class="col-10 text-center">
                    <p class="mt-3">Already registered? <a href="/Login/Index">Go to Login</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/Password.js" asp-append-version="true"></script>
<script type="module" src="~/js/signUp.js" asp-append-version="true"></script>